load_file("nrngui.hoc")
load_proc("nrnmainmenu")

create soma, axon
v_init=-65
soma{
  nseg=1
  diam=30
  L=30
  Ra=150
  cm=1
	insert hh
	insert opto
		N_opto = 50
		kr_opto = 1/3000
  }

